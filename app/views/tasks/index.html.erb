<% content_for :title do %>Tasks<% end %>

<div class="_container">
  <div class="row">
    <div class="col-md-12 clearfix">
      <div class="pull-left" style="padding-right:10px;">
        <h1>Tasks</h1>
      </div>
      <div style="margin-top:25px;">
        <%= link_to "Add Project",
          new_task_path,
          class: 'btn btn-info btn-sx' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Company</th>
      <th>Project</th>
      <th>Task</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td style="width:20%"><%= task.project.company.name %></td>
        <td style="width:20%"><%= task.project.name %></td>
        <td style="width:40%"><%= task.name %></td>
        <td>
          <%= link_to t('.show', default: t("helpers.links.show")),
                      task_path(task), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-default btn-xs' %>
          <% destroy_text = t('.destroy', default: t("helpers.links.destroy")) %>
          <%= link_to task_path(task), {
                method: :delete,
                class: 'btn btn-delete-task btn-xs',
                style: 'padding: 6px 12px;',
                title: "#{destroy_text}",
                data: {
                  dialog_title: "#{destroy_text} this project?",
                  entity_name: "task <strong>#{task.name}</strong>",
                  warning: "<span style='color:#c00;'>Warning: All user associated Task Times will be deleted!</span>"
                },
                form: { style: 'display:inline-block;' }
              } do %>
              <%= destroy_text %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
