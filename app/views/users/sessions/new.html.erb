<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Log in</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class='input-md'><%= f.label :email %></div>
        <div class='input-md'><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %></div>
      </div>

      <div class="form-group">
        <div class='input-md'><%= f.label :password %></div>
        <div class='input-md'><%= f.password_field :password, class: "form-control", autocomplete: "off" %></div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class='input-md'><%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class='actions form-group'>
        <div class='input-md'><%= submit_tag 'Log in', class: 'btn btn-default btn-special dark' %></div>
      </div>
    <% end %>

    <div class="form-group">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
