<%= render partial: 'shared/errors', locals: { model: @user } %>

<%= form_with(model: @user, local: true) do |f| %>
<%#= form_for(@user, url: user_path, builder: InlineErrorsBuilder, method: :PATCH, role: :form) do |f| %>
  <div class="form-group">
    <div class='input-md'><%= f.label :user_name %></div>
    <div class='input-md'><%= f.email_field :user_name, class: "form-control", autofocus: true, autocomplete: "off" %></div>
  </div>

  <div class="form-group">
    <div class='input-md'><%= f.label :email %></div>
    <div class='input-md'><%= f.email_field :email, class: "form-control", autocomplete: "email" %></div>
  </div>

  <div class="form-group">
    <div class='input-md'><%= f.label :password %></div>
    <div class='input-md'><%= f.password_field :password, class: "form-control", autocomplete: "off" %></div>
  </div>

  <div class="form-group">
    <div class='input-md'><%= f.label :confirm_password %></div>
    <div class='input-md'><%= f.password_field :confirm_password, class: "form-control", autocomplete: "off" %></div>
  </div>

  <div class='actions form-group'>
    <div class='input-md'>
      <%= submit_tag 'Update user', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', users_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
